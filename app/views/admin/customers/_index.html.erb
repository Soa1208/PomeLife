<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>氏名</th>
      <th>表示名</th>
      <th>ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td>
          <%= link_to admin_customer_path(customer.id) do %>
            <%= customer.full_name %>
          <% end %>
        </td>
        <td><%= customer.display_name %></td>
        <td style="<%= customer.is_active ? 'color: green;' : 'color: red;' %>"><%= customer.customer_status %></td>
        <td><%= link_to "プロフィール詳細", admin_customer_path(customer.id), class: "btn btn-brown btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>