<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>相談者名</th>
      <th>タイトル</th>
      <th>回答数</th>
      <th>ステータス</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td>
          <%= link_to admin_customer_path(question.customer.id) do %>
            <%= question.customer.full_name %>
          <% end %>
        </td>
        <td><%= link_to question.title, admin_question_path(question.id) %></td>
        <td><%= "#{question.answers.count} 回答" %></td>
        <td>
          <% if question.is_active %>
            <span style="color: #F9803F;">解決済</span>
          <% else %>
            <span style="color: red;">未解決</span>
          <% end %>
        </td>
        <td><%= link_to "相談詳細", admin_question_path(question.id), class: "btn btn-brown btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>