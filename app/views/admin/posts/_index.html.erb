<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>投稿者名</th>
      <th>タイトル</th>
      <th>コメント数</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.id %></td>
        <td>
          <%= link_to admin_customer_path(post.customer.id) do %>
            <%= post.customer.full_name %>
          <% end %>
        </td>
        <td><%= link_to post.title, admin_post_path(post.id) %></td>
        <td><%= "#{post.comments.count}コメント" %></td>
        <td><%= link_to "投稿詳細", admin_post_path(post.id), class: "btn btn-brown btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>