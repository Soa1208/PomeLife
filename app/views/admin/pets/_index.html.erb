<table class='table'>
  <thead>
    <tr>
      <th>ID</th>
      <th>ペット名</th>
      <th>登録ユーザ名</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.id %></td>
        <td><%= link_to pet.name, admin_pet_path(pet.id) %></td>
        <td><%= link_to pet.customer.full_name, admin_customer_path(pet.customer.id) %></td>
        <td><%= link_to "プロフィール詳細", admin_pet_path(pet.id), class: "btn btn-brown btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>