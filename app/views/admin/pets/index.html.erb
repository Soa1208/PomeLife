<div class="container">
  <div class="row">
    <div class="col-4" style="background-color: #DCC2A1; margin-top: 40px;">
      <h4 class="text-center"><strong>ペット一覧</strong></h4>
    </div>
  </div>
  <table class='table' style="margin-top: 30px;">
    <thead style="background-color: #DCC2A1;">
      <tr>
        <th>ペット名</th>
        <th>ユーザ名</th>
      </tr>
    </thead>
    <tbody>
      <% @pets.each do |pet| %>
        <tr>
          <td><%= link_to pet.name, admin_pet_path(pet.id) %></td>
          <td><%= link_to pet.customer.full_name, admin_customer_path(pet.customer.id) %></td>
          <td><%= link_to "編集", edit_admin_pet_path(pet), class: "btn btn-success" %></td>
          <td><%= link_to "削除", admin_pet_path(pet), method: :delete, "data-confirm" => "本当に消しますか？" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>




