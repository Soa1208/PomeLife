<div class="container" style="max-width: 50%;">
  <div class="row">
    <div class="col-4" style="background-color: #DCC2A1; margin-top: 40px;">
      <h4 class="text-center"><strong>相談編集</strong></h4>
    </div>
  </div>
  
  <div class="card-body">
    <%= form_with model: @question, local: true, method: :patch do |f| %>
      <div class="row mb-3">
        <div class="col-md-3 col-form-label">画像</div>
        <div class="col-md-8" style="position: relative; left: -12px;">
          <%= f.file_field :image, accept: "image/*", class: "form-control border-0", style: "background-color: #FFEBCD;"%>
        </div>
      </div>
  
      <div class="row mb-3">
        <div class="col-md-3 col-form-label">title</div>
        <div class="col-md-8">
          <%= f.text_field :title, placeholder: "title", class: "form-control" %>
        </div>
      </div>
  
      <div class="row mb-3">
        <div class="col-md-3 col-form-label">body</div>
        <div class="col-md-8">
          <%= f.text_area :body, placeholder: "body", class: "form-control", rows: 5 %>
        </div>
      </div>
      
      <%= f.hidden_field :customer_id, value: current_customer.id %>

      <div class="row">
        <div class="col-md-8 offset-md-4">
          <%= f.submit '変更を保存', class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>