<div class="container">
  <div class="row">
    <div class="col-4 offset-4" style="background-color: #DCC2A1; margin-top: 40px;">
      <h4 class="text-center"><strong>相談詳細</strong></h4>
    </div>
  </div>
  <div class="row" style="margin-top: 20px;">
    <div class="col-md-4 mx-auto">
      <% if @question.image.attached? %>
        <%= image_tag url_for(@question.image), size: "100x100" %>
      <% else %>
        <p>No image attached</p>
      <% end %>
    </div>

    <div class="col-md-8">
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-4">
            <h4 class="card-title">相談名</h4>
          </div>
          <div class="col-md-8">
            <p class="card-text"><%= @question.title %></p>
          </div>
        </div>

        <div class="row mb-3">
          <div class="col-md-4">
            <h4 class="card-title">相談内容</h4>
          </div>
          <div class="col-md-8">
            <p class="card-text"><%= @question.body %></p>
          </div>
        </div>
        
        <div>
          <p>回答件数：<%= @question.answers.count %>件</p>
          <% @question.answers.each do |answer| %>
            <p>
              <% if answer.customer.present? && answer.customer.image.attached? %>
                <%= image_tag url_for(answer.customer.image), size: "100x100" %>
              <% else %>
                <p>No image available</p>
              <% end %>
            </p>
            <%= answer.customer.full_name %>
            <%= answer.created_at.strftime('%Y/%m/%d') %><%= answer.answer %>
            <% if answer.customer == current_customer %>
              <%= link_to "コメント削除", question_answer_path(answer.question, answer), method: :delete, "data-confirm" => "本当に消しますか？" %>
            <% end %>
          <% end %>
        </div>
        <div>
          <%= form_with model: [@question, @answer] do |f| %>
            <%= f.text_area :answer, rows: '5', placeholder: "コメントをここに" %>
            <%= f.submit "送信する" %>
          <% end %>
        </div>

        <div class="row mt-3">
          <div class="col-md-2 text-center">
            <%= link_to "編集する", edit_question_path(@question), class: "btn btn-success" %>
            <%= link_to "削除", question_path(@question), method: :delete, "data-confirm" => "この相談を削除しますか？" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>