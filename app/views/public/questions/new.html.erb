<div class="container">
  <div class="row">
    <h4>相談投稿</h4>
  </div>
  <%= form_with model: Question.new, local: true do |f| %>
    <div class="row mb-3">
      <div class="col-md-3">相談画像（任意）</div>
      <div class="col-md-6">
        <%= f.file_field :question_image, accept: "image/*" %>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-md-3 col-form-label">相談タイトル</div>
      <div class="col-md-6">
        <%= f.text_field :title, placeholder: "タイトルを入力してください。", class: "form-control" %>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-md-3 col-form-label">相談内容</div>
      <div class="col-md-6">
        <%= f.text_area :content, placeholder: "相談したい内容を入力してください。", class: "form-control", rows: 5 %>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-md-3 col-form-label">相談タグ</div>
      <div class="col-md-6">
        <%= f.text_field :category, placeholder: "#", class: 'form-control', rows: 5 %>
      </div>
    </div>
    
    <%= f.hidden_field :customer_id, value: current_customer.id %>
          
    <div class="row">
      <div class="col-md-8 offset-md-3">
        <%= f.submit '相談する', class: "btn btn-brown" %>
      </div>
    </div>
  <% end %>
</div>