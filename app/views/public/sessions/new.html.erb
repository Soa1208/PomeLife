<div class="container">
  <div class="row">
    <h4>ログイン</h4>
  </div>
  <div class="row-12">
    <%= form_with model: @customer, url: customer_session_path do |f| %>
    
      <div class="mb-3 row">
        <%= f.label :email, "メールアドレス", class: "col-md-3 col-sm-4 col-form-label" %>
        <div class="col-sm-8 col-md-6 col-lg-4">
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
      
      <div class="mb-3 row">
        <%= f.label :password, "パスワード", class: "col-md-3 col-sm-4 col-form-label" %>
        <div class="col-sm-8 col-md-6 col-lg-4">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <small class="text-muted">(<%= @minimum_password_length %>文字以上)</small>
          <% end %>
        </div>
      </div>
    
      <% if devise_mapping.rememberable? %>
        <div class="mb-2 col-sm-8">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>
      <div class="mb-2 col-sm-8">
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
  </div>
</div>