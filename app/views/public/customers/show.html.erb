<div class="container">
  <div class="row">
    <div class="col">
      <h3 class="my-4"><b>マイページ</b></h3>
      <div class="d-flex align-items-center">
        <h4><b>登録情報</b></h4>
      </div>
      <div>
			  <p><%= flash[:notice] %></p>
			</div>
      <table class="table">
        <tr>
          <td>氏名</td>
          <td><%= @customer.full_name %></td>
        </tr>
        <tr>
          <td>カナ</td>
          <td><%= @customer.full_name_kana %></td>
        </tr>
				<tr>
          <td>表示名</td>
          <td><%= @customer.display_name %></td>
        </tr>
				<tr>
          <td>メールアドレス</td>
          <td><%= @customer.email %></td>
        </tr>
        <tr>
          <td>電話番号</td>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <td>郵便番号</td>
          <td><%= @customer.postal_code %></td>
        </tr>
        <tr>
          <td>住所</td>
          <td><%= @customer.address %></td>
        </tr>
      </table>
      <div>
      	<%= link_to '編集する', edit_customer_path, class:"btn btn-success" %>
      </div>
    </div>
  </div>
</div>