<div class="container">
  <div class="row">
    <h4>新規登録</h4>
  </div>
  <div class="row-12">
    <%= form_with model: @customer, url: registration_path(resource_name), local: true do |f| %>
      <div class="row mb-3">
        <%= f.label :last_name, "名前 (姓)", class: "col-sm-4 col-md-2 form-label" %>
        <div class="col-sm-8 col-md-4">
          <%= f.text_field :last_name, autofocus: true, placeholder: "田中", class: "form-control" %>
        </div>
        <%= f.label :first_name, "名前 (名)", class: "col-sm-4 col-md-2 form-label" %>
        <div class="col-sm-8 col-md-4">
          <%= f.text_field :first_name, placeholder: "太郎", class: "form-control" %>
        </div>
      </div>
      
      <div class="row mb-3">
        <%= f.label :last_name_kana, "名前 (セイ)", class: "col-sm-4 col-md-2 form-label" %>
        <div class="col-sm-8 col-md-4">
          <%= f.text_field :last_name_kana, autofocus: true, placeholder: "タナカ", class: "form-control" %>
        </div>
        <%= f.label :first_name_kana, "名前 (メイ)", class: "col-sm-4 col-md-2 form-label" %>
        <div class="col-sm-8 col-md-4">
          <%= f.text_field :first_name_kana, placeholder: "タロウ", class: "form-control" %>
        </div>
      </div>
  
      <div class="mb-3 row">
        <%= f.label :display_name, "表示名", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :display_name, placeholder: "上限8文字", class: "form-control" %>
        </div>
      </div>
  
      <div class="mb-3 row">
        <%= f.label :email, "メールアドレス", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.email_field :email, autocomplete: "email", class: "form-control" %>
        </div>
      </div>
  
      <div class="mb-3 row">
        <%= f.label :postal_code, "郵便番号(ハイフンなし7桁)", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :postal_code, placeholder: "5420076", class: "form-control" %>
        </div>
      </div>
  
      <div class="mb-3 row">
        <%= f.label :address, "住所(郵便番号から自動入力)", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :address, class: "form-control" %>
        </div>
      </div>
  
      <div class="mb-3 row">
        <%= f.label :telephone_number, "電話番号(ハイフンなし10or11桁)", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.text_field :telephone_number, placeholder: "00011112222", class: "form-control" %>
        </div>
      </div>
  
      <div class="mb-3 row">
        <%= f.label :password, "パスワード", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
          <% if @minimum_password_length %>
            <small class="text-muted">(<%= @minimum_password_length %>文字以上)</small>
          <% end %>
        </div>
      </div>
      
      <div class="mb-3 row">
        <%= f.label :password_confirmation, "パスワード(確認用)", class: "col-sm-4 col-form-label" %>
        <div class="col-sm-8">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>
      </div>
  
      <div class="row mb-3">
        <div class="col-12">
          <%= f.submit "新規登録", class: "btn btn-success" %>
        </div>
      </div>
    <% end %>
  </div>
</div>