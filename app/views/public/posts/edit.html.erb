<div class="container">
  <div class="row">
    <h4>投稿の編集</h4>
  </div>
  
  <div class="card-body">
    <%= form_with model: @post, local: true, method: :patch do |f| %>
      <div class="row mb-3">
        <div class="col-md-2">投稿画像</div>
        <div class="col-md-6">
          <%= f.file_field :post_image, accept: "image/*" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-2 col-form-label">ペット選択</div>
        <div class="col-md-6">
          <%= f.collection_select :pet_id, current_customer.pets, :id, :name, prompt: "--選択してください--" %>
        </div>
      </div>
  
      <div class="row mb-3">
        <div class="col-md-2 col-form-label">投稿タイトル</div>
        <div class="col-md-6">
          <%= f.text_field :title, placeholder: "title", class: "form-control" %>
        </div>
      </div>
  
      <div class="row mb-3">
        <div class="col-md-2 col-form-label">投稿本文</div>
        <div class="col-md-6">
          <%= f.text_area :content, placeholder: "body", class: "form-control", rows: 5 %>
        </div>
      </div>
      
      <%= f.hidden_field :customer_id, value: current_customer.id %>

      <div class="row">
        <div class="col-md-6 offset-md-2">
          <%= f.submit '変更', class: "btn btn-brown" %>
        </div>
      </div>
    <% end %>
  </div>
</div>