<div class="container">
  <div class="row">
    <h4>すべての投稿一覧</h4>
    <div class="col-6 title-beside">
      <% if customer_signed_in? %>
        <%= link_to "投稿する", new_post_path, class: "btn btn-brown btn-sm" %>
      <% else %>
        <%= link_to "投稿する", new_customer_session_path, class: "btn btn-brown btn-sm" %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <%= render 'index', posts: @posts %>
  </div>
</div>