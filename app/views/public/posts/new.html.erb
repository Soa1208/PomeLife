<div class="container">
  <div class="row">
    <h4>新規投稿</h4>
  </div>
  <%= form_with model: Post.new, local: true do |f| %>
    <div class="row mb-3">
      <div class="col-md-3">投稿画像</div>
      <div class="col-md-6">
        <%= f.file_field :post_image, accept: "image/*" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3 col-form-label">ペット選択</div>
      <div class="col-md-6">
        <%= f.collection_select :pet_id, current_customer.pets, :id, :name, prompt: "--選択してください--", class: "form-control" %>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-md-3 col-form-label">投稿タイトル</div>
      <div class="col-md-6">
        <%= f.text_field :title, placeholder: "タイトルを入力してください。", class: "form-control" %>
      </div>
    </div>
    
    <div class="row mb-3">
      <div class="col-md-3 col-form-label">投稿内容</div>
      <div class="col-md-6">
        <%= f.text_area :content, placeholder: "内容を入力してください。", class: "form-control", rows: 5 %>
      </div>
    </div>
    
    <%= f.hidden_field :customer_id, value: current_customer.id %>
          
    <div class="row">
      <div class="col-md-8 offset-md-3">
        <%= f.submit '投稿する', class: "btn btn-brown" %>
      </div>
    </div>
  <% end %>
</div>