<div class="container">
  <div class="row">
    <h4>ポメラニアンの登録</h4>
  </div>
  <%= form_with model: @pet, local: true do |f| %>
    <div class="row mb-3">
      <div class="col-md-3">ペットプロフィール画像</div>
      <div class="col-md-6">
        <%= f.file_field :pet_image, accept: "image/*" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3 col-form-label">名前</div>
      <div class="col-md-6">
        <%= f.text_field :name, placeholder: "名前", class: "form-control" %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3">誕生日</div>
      <div class="col-md-6">
        <%= f.date_select :birthday,
                { start_year: 2000,
                  end_year: Time.current.year,
                  use_two_digit_numbers: true,
                  order: [:year, :month, :day],
                  default: 10.years.ago.to_date },
                { include_blank: true,
                  prompt: { day: '日', month: '月', year: '年' },
                  class: "input-tab birthday-select" } %>
      </div>
    </div>

    <div class="row mb-3">
      <div class="col-md-3 col-form-label">性別</div>
      <div class="col-md-6">
        <div class="form-check form-check-inline">
          <%= f.radio_button :gender, "male", id: "male", class: "form-check-input", checked: true %>
          <label class="form-check-label" for="male" style="color: black;">男の子</label>
        </div>
        <div class="form-check form-check-inline">
          <%= f.radio_button :gender, "female", id: "female", class: "form-check-input" %>
          <label class="form-check-label" for="female" style="color: black;">女の子</label>
        </div>
      </div>
    </div>
          
    <div class="row">
      <div class="col-md-6 offset-md-3">
        <%= f.submit '登録', class: "btn btn-brown" %>
      </div>
    </div>
  <% end %>
</div>